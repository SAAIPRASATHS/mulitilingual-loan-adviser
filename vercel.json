{
    "version": 2,
    "functions": {
        "backend/server.js": {
            "runtime": "@vercel/node"
        }
    },
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/backend/server.js"
        },
        {
            "source": "/uploads/:match*",
            "destination": "/backend/uploads/:match*"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/$1",
            "continue": true
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}