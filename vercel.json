{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/api/index.js"
        },
        {
            "source": "/uploads/:match*",
            "destination": "/backend/uploads/:match*"
        },
        {
            "source": "/assets/:match*",
            "destination": "frontend/dist/assets/:match*"
        },
        {
            "source": "/((?!api|uploads|assets|favicon.ico).*)",
            "destination": "frontend/dist/index.html"
        }
    ]
}