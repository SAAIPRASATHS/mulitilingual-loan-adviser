{
    "version": 2,
    "functions": {
        "backend/server.js": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/backend/server.js"
        },
        {
            "source": "/uploads/:match*",
            "destination": "/backend/uploads/:match*"
        },
        {
            "source": "/((?!api|uploads).*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}